NAME = libft.a

SRC_FILES = ft_arrlen \
ft_bzero \
ft_calloc \
ft_free_array \
ft_memset \
ft_strcpy \
ft_strdup \
ft_strlcpy \
ft_strlen \
ft_strncmp \
ft_strtrim \
ft_substr \

H_FILES = libft

LIB_NAME = libft.a

SRC = $(addsuffix .c, $(SRC_FILES))
OBJ = $(addsuffix .o, $(SRC_FILES))
HS = $(addsuffix .h, $(H_FILES))

BUILD_FLAGS = -Wall -Wextra -Werror

all: $(NAME)

$(NAME):
	cc $(BUILD_FLAGS) -c $(SRC) -I $(HS)
	ar rc $(LIB_NAME) $(OBJ)
	ranlib $(LIB_NAME)

clean:
	rm -f $(OBJ) $(B_SRC:.c=.o)

fclean: clean
	rm -f $(LIB_NAME)

re: fclean all
